{
  "name": "a3-headless-demo",
  "version": "1.0.0-beta",
  "description": "Apostrophe 3 headless demo site",
  "main": "app.js",
  "scripts": {
    "build": "webpack && npm run apostrophe-build",
    "apostrophe-build": "node app @apostrophecms/asset:build",
    "start": "node app",
    "dev": "nodemon --delay 1000ms -x \"npm run build && nodemon app.js\""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "apostrophe": "github:apostrophecms/apostrophe#3.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "extract-css-chunks-webpack-plugin": "^4.8.0",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "author": "Apostrophe Technologies, Inc",
  "license": "MIT",
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html",
      "./src/**/*",
      "./node_modules/apostrophe/modules/@apostrophecms/**/*"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "lib/modules/*/public/js/*.js",
      "locales/*.json",
      "public/modules/**/*.less",
      "public/modules/**/*.js",
      "public/uploads",
      "public/apos-minified/*.js",
      "public/css/master-*.less",
      "modules/asset/ui/public/site.js",
      "data"
    ],
    "ext": "json, js, html, scss, vue"
  },
  "devDependencies": {
    "eslint": "^7.8.0",
    "eslint-config-apostrophe": "^3.4.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.4"
  }
}
